# ============================================
# Knowledge AI Platform - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# --------------------------------------------
# Supabase Configuration
# --------------------------------------------
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# --------------------------------------------
# API Keys (Server-side only - DO NOT prefix with VITE_)
# --------------------------------------------

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# YouTube Data API v3
YOUTUBE_API_KEY=your-youtube-api-key

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Nano Banana Pro (Image Generation)
NANO_BANANA_API_KEY=your-nano-banana-api-key

# Resend (Email)
RESEND_API_KEY=your-resend-api-key

# --------------------------------------------
# N8N Webhooks
# --------------------------------------------
N8N_WEBHOOK_BASE_URL=https://your-n8n-instance.app.n8n.cloud/webhook

# Webhook security secret (generate with: openssl rand -hex 32)
# Add this same secret to your N8N workflow HTTP headers
N8N_WEBHOOK_SECRET=your-webhook-secret-here

# Specific webhook endpoints (set in N8N)
N8N_WEBHOOK_ANALYZE_CHANNEL=/analyze-channel
N8N_WEBHOOK_ANALYZE_VIDEO=/analyze-video
N8N_WEBHOOK_GENERATE_CONTENT=/generate-content

# --------------------------------------------
# Server Configuration
# --------------------------------------------
PORT=3002
NODE_ENV=development

# Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=debug

# Redis URL (for production caching and rate limiting)
# REDIS_URL=redis://localhost:6379

# --------------------------------------------
# Security Configuration
# --------------------------------------------

# Enable demo mode (ONLY for development - never in production)
# When enabled, API works without Supabase auth configured
ALLOW_DEMO_MODE=true

# Allowed origins for CORS (comma-separated, for production)
# ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
